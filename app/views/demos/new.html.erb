<% provide(:title, '添加案例') %>
<div class="row">
	<%= render "side" %>
	<div class="span6">
		<%= form_for([@company,@company.demos.build], :html => {:multipart => true} ) do |f| %>
			<%= f.label :title, "名称" %>
			<%= f.text_field :title %>

			<%= f.label :image, "图片" %>
			<%= f.file_field :image %>

			<%= f.label :introduction, "介绍" %>
			<%= f.text_field :introduction %>

			<%= f.submit "添加", class:"btn btn-large btn-primary" %>
	    <% end %>
	</div>
</div>
