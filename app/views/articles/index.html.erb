<% provide(:title, '全部文章') %>
<div class="cus-breadcrumb">
	<ol class="breadcrumb">
		<li><%= link_to '首页', root_path, :target=>'_blank'%></li>
		<li class="active">全部知识</li>
	</ol>
</div>

<div class="col-md-8">
	<% @articles.each do |article| %>
		<div class="index-article-item">
			<div class="index-article-image"><%= image_tag article.coverimage, :width=>150, :height=>157 %></div>
			<div>
				<div class="index-article-title"><%= link_to article.title, article, :target=>"_blank" %></div>
				<div class="index-article-tag">
					<span><%= article.created_at.year %>/<%= article.created_at.month %>/<%= article.created_at.day %> | </span>
					<span><%= article.category %> | </span>
					<span><%= article.comments.count %> 条评论</span>
				</div>
				<div class="index-article-thubmil">
					<%= truncate(strip_tags(article.content),length:150)%>
					<div class="article-read-more"><%= link_to '阅读全文 >>', article, :target=>"_blank" %></div>
				</div>
			</div>				
		</div>
	<% end %>
	<%= will_paginate @articles, :previous_label=>'上一页', :next_label=>'下一页' %>
</div>
<div class="col-md-3 index-article-slider">
	<div class="newst-article">
		<div class="newst-article-header">最新文章</div>
		<div class="newst-article-content">
			<ul>
				<% @newst_articles.each do |newst_article| %>
					<li><%= link_to newst_article.title , article_path(newst_article)%></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="command-article">
		<div class="command-article-header">推荐文章</div>
		<div class="command-article-content">
			<ul>
				<% @command_artilces.each do |command_article| %>
					<li><%= link_to command_article.title , article_path(command_article) %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
