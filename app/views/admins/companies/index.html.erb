<div class="row admin-row">
	<div class="well span2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to '用户管理', admins_users_path %></li>
			<li class="active"><%= link_to '公司管理',admins_companies_path %></li>
			<li><%= link_to '知识管理', admins_articles_path %></li>
			<li><%= link_to '笔记管理', admins_logs_path %></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>

	<div class="span9">
		<div class="add-company"><%= link_to '添加公司', new_admins_company_path%></div>
		<table class="table table-bordered admin">
			<thead>
			   <th id="admin-logo">Logo</th>
               <th>公司名称</th>
			   <th>类别</th>
			   <th>是否显示</th>
               <th>操作</th>
			</thead>
			<tbody>
				<% if @companies %>
					<% @companies.each do |company| %>
						<tr>
							<td> <%= image_tag company.logo, :with => 100, :height => 100 %></td>
							<td> <%= company.name %></td>
							<td> <%= company.category %></td>
							<td> 
								<span id="companyid"><%= company.id%></span>
								<% if company.show %>
									<input type="checkbox" checked="true" name="isshow" id="companyshow"/>
								<% else %>
									<input type="checkbox" name="isshow" id="companyshow">
								<% end %>
							</td>
							<td>
								<i class="icon-edit"></i>
								<span class="option"><%= link_to "编辑", "" %></span>
								<i class="icon-trash"></i>
								<span class="option"><%= link_to "删除", "" %></span>
								<i class="icon-eye-open"></i>
								<span class="option"><%= link_to "详细", admins_company_path(company)%></span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		</table>
		<%= will_paginate @companies %>
	</div>
</div>
