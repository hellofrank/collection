<% provide(:title, '创建公司') %>
<div class="row admin-row">
	<div class="well span2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to '用户管理', admins_users_path %></li>
			<li class="active"><%= link_to '公司管理',admins_companies_path %></li>
			<li><%= link_to '知识管理', admins_articles_path %></li>
			<li><%= link_to '笔记管理', admins_logs_path %></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="span9">
<div class="span6">
	  <h3>创建公司</h3>
	  <%= form_for(@company, :url => admins_companies_path,:html => {:multipart => true} ) do |f| %>

      <%= f.label :logo, 'Logo' %>
      <%= f.file_field :logo %>
      
      <%= f.label :name, '公司名称' %>
      <%= f.text_field :name %>
      
	  <%= f.label :category, '公司类别'%>
	  <%= f.text_field :category %>
	
      <%= f.label :about, '公司简介' %>
      <%= f.text_field :about %>

	  <%= f.label :service, '公司范围' %>
	  <%= f.text_field :service %>

      <%= f.submit "创建", class: "btn btn-large btn-primary" %>
    <% end %>
</div>
</div>
</div>
