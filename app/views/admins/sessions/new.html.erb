<div class="row" id="show-company">
	<div class="col-md-6 col-md-offset-3">
		<h4>管理员登录</h4>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="form-signin">
			<%= f.input :email, class:'input-sm', label:'邮箱',:required => false, :autofocus => true %>
			<%= f.input :password, label:'密码', :required => false %>
			<%= f.input :remember_me, label:'记住我', :as => :boolean if devise_mapping.rememberable? %>
		  </div>
			
		  <div class="col-submit">
			  <%= f.button :submit, "登录", class: "btn btn-large btn-primary" %>
		  </div>
		<% end %>

		<%= render "admins/shared/link" %>
	</div>
</div>
