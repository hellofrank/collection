<% provide(:title, '添加联系方式') %>
<div class="row admin-row">
	<div class="well col-md-2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to "用户管理","#" %></li>
			<li class="active"><%= link_to '公司管理',admins_companies_path %></li>
			<li><a href="#">知识管理</a></li>
			<li><a href="#">笔记管理</a></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="col-md-6">
		<%= form_for(@contact, :url=>admins_company_contact_path(@company)) do |f| %>
			<%= f.label :telephone, '座机' %>
			<%= f.text_field :telephone %>

			<%= f.label :mobile, '手机' %>
			<%= f.text_field :mobile %>

			<%= f.label :mail, '邮箱' %>
			<%= f.text_field :mail %>

			<%= f.label :qq, 'QQ' %>
			<%= f.text_field :qq %>

			<%= f.label :other, '其他' %>
			<%= f.text_field :other %>

			<%= f.submit "添加", class: "btn btn-large btn-primary" %>
	<% end %>
	</div>
</div>
