<div class="col-md-6 col-md-offset-3">
	<legend>管理员注册</legend>
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		<div>
			<%= f.label :email, '邮箱' %>
			<%= f.text_field :email, class: 'required email' %>
		</div>
		<div>
			<%= f.label :password, '密码' %>
			<%= f.password_field :password, class: 'required' %>
		</div>
		<div>
			<%= f.label :password_confirmation, '密码确认' %>
			<%= f.password_field :password_confirmation, class: 'required'%>
		</div>
		<div class="col-submit register-wrap-input">
			<%= f.submit "注册", class: "btn btn-primary btn-large" %>
		</div>
	<% end %>

	<%= render "admins/shared/link" %>
</div>
