<div class="row admin-row">
	<div class="well span2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li class="active"><%= link_to "用户管理", admins_users_path %></li>
			<li><%= link_to '公司管理', admins_companies_path %></li>
			<li><%= link_to '知识管理', admins_articles_path %></li>
			<li><%= link_to '笔记管理', admins_logs_path %></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="span9">
		<table class="table table-bordered admin">
			<thead>
               <th>用户名</th>
               <th>邮箱</th>
               <th>注册时间</th>
               <th>最后登录时间</th>
               <th>操作</th>
			</thead>
			<tbody>
				<% if @users %>
					<% @users.each do |user| %>
						<tr>
							<td> <%= user.name %></td>
							<td> <%= user.email %></td>
							<td> <%= user.created_at%></td>
							<td> <%= user.last_sign_in_at %></td>
							<td>
								<i class="icon-edit"></i>
								<span class="option"><%= link_to "编辑", "#" %></span>
								<i class="icon-trash"></i>
								<span class="option"><%= link_to "删除", "#" %></span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		</table>
	</div>
</div>
