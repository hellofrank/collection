<div class="row">
	<div class="well span2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><a href="#">首页管理</a></li>
			<li class="active"><a href="#">用户管理</a></li>
			<li><a href="#">公司管理</a></li>
			<li><a href="#">文章管理</a></li>
		</ul>
	</div>
	<div class="span9">

		<table class="table table-bordered admin">
			<thead>
               <th>用户名</th>
               <th>邮箱</th>
               <th>注册时间</th>
               <th>最后登录时间</th>
               <th>操作</th>
			</thead>
			<tbody>
				<% if @users %>
					<% @users.each do |user| %>
						<tr>
							<td> <%= user.name %></td>
							<td> <%= user.email %></td>
							<td> <%= user.created_at%></td>
							<td> <%= user.last_sign_in_at %></td>
							<td>
								<i class="icon-edit"></i>
								<span class="option"><%= link_to "编辑", "#" %></span>
								<i class="icon-trash"></i>
								<span class="option"><%= link_to "删除", "#" %></span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		</table>	

		<table class="table table-bordered admin">
			<thead>
			   <th id="admin-logo">Logo</th>
               <th>公司名称</th>
			   <th>类别</th>
               <th>操作</th>
			</thead>
			<tbody>
				<% if @companies %>
					<% @companies.each do |company| %>
						<tr>
							<td> <%= image_tag company.logo, :with => 100, :height => 100 %></td>
							<td> <%= company.name %></td>
							<td> <%= company.category %></td>
							<td>
								<i class="icon-edit"></i>
								<span class="option"><%= link_to "编辑", "" %></span>
								<i class="icon-trash"></i>
								<span class="option"><%= link_to "删除", "" %></span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		</table>

		<table class="table table-bordered admin">
			<thead>
               <th>标题</th>
			   <th>发布时间</th>
			   <th>操作</th>
			</thead>
			<tbody>
				<% if @articles %>
					<% @articles.each do |article| %>
						<tr>
							<td> <%= article.title %></td>
							<td> <%= article.created_at %></td>
							<td> 
								<i class="icon-edit"></i>
								<span class="option"><%=link_to '编辑', edit_admins_article_path(article) %></span>
								<i class="icon-trash"></i>
								<span class="option"><%=link_to '删除', '#' %> </span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		 </table>
	</div>
</div>
