<div class="row admin-row">
	<%= render "admins/admin_slider" %>
	<div class="col-md-9">
		<table class="table table-bordered admin">
			<thead>
               <th>标题</th>
			   <th>发布时间</th>
			   <th>作者</th>
			   <th>操作</th>
			</thead>
			<tbody>
				<% if @logs %>
					<% @logs.each do |log| %>
						<tr>
							<td><%= log.title %></td>
							<td><%= log.created_at %></td>
							<td><%= log.user.name %></td>
							<td> 
								<span class="glyphicon glyphicon-pencil"></span>
								<span class="option"><%=link_to '编辑', '#' %></span>
								<span class="glyphicon glyphicon-trash""></span>
								<span class="option"><%=link_to '删除', '#' %> </span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		 </table>
	</div>
</div>
