<% provide(:title, '更新法人信息') %>
<div class="row admin-row">
	<div class="well span2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to "用户管理","#" %></li>
			<li class="active"><%= link_to '公司管理',admins_companies_path %></li>
			<li><a href="#">知识管理</a></li>
			<li><a href="#">笔记管理</a></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="span9">
		<ul class="breadcrumb">
			<li><%= link_to '公司管理', admins_companies_path %><span class="divider">/</span></li>
			<li><%= link_to @company.name, admins_company_path(@company)%><span class="divider">/</span></li>
			<li class="active">编辑法人信息</li>
		</ul>
		<%= form_for(@owner, :url => admins_company_owner_path(@company)) do |f| %>
			
			<%= f.label :name, '姓名' %>
			<%= f.text_field :name %>

			<%= f.label :photo, '照片' %>
			<%= f.file_field :photo %>

			<%= f.label :about, '简介' %>
			<%= f.text_field :about %>

			<%= f.label :license, '营业执照' %>
			<%= f.file_field :license %>

		    <%= f.submit "更新", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
