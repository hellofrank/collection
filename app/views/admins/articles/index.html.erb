<div class="row admin-row">
	<div class="well col-md-2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to "用户管理", admins_users_path %></li>
			<li><%= link_to '公司管理', admins_companies_path %></li>
			<li class="active"><%= link_to '知识管理', admins_articles_path %></li>
			<li><%= link_to '笔记管理', admins_logs_path %></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="add-company"><%= link_to '添加文章', new_admins_article_path %></div>
		<table class="table table-bordered admin">
			<thead>
				<th>封面</th>
               <th>标题</th>
			   <th>发布时间</th>
			   <th>评论</th>
			   <th>操作</th>
			</thead>
			<tbody>
				<% if @articles %>
					<% @articles.each do |article| %>
						<tr>
							<td><%= image_tag article.coverimage, :width=>100, :height=>100 %></td>
							<td><%= article.title %></td>
							<td><%= article.created_at.year %>/<%= article.created_at.month %>/<%= article.created_at.day %></td>
							<td><%= article.comments.count%></td>
							<td> 
								<span class="glyphicon glyphicon-pencil"></span>
								<span class="option"><%=link_to '编辑', edit_admins_article_path(article) %></span>
								<span class="glyphicon glyphicon-trash"></span>
								<span class="option"><%=link_to '删除', admins_article_path(article), method: :delete,
								data:{confirm:"you sure?"} %> </span>
							</td>
						</tr>
					<% end %>
			    <% end %>
			</tbody>
		 </table>
	</div>
</div>
