<% provide(:title, '添加文章') %>
<h2>添加文章</h2>
<div class="row admin-row">
	<div class="well col-md-2">
		<ul class="nav nav-list">
			<li class="nav-header">管理面板</li>
			<li><%= link_to '首页管理', admins_manager_path %></li>
			<li><%= link_to "用户管理", admins_users_path %></li>
			<li><%= link_to '公司管理', admins_companies_path %></li>
			<li class="active"><%= link_to '知识管理', admins_articles_path %></li>
			<li><%= link_to '笔记管理', admins_logs_path %></li>
			<li><a href="#">申请管理</a></li>
		</ul>
	</div>
	<div class="col-md-6">
		<%= form_for @article, url: admins_articles_path,:html => {:multipart => true} do |f| %>
			
			<%= f.label :title, '标题' %>
			<%= f.text_field :title %>

			<%= f.label :coverimage, '封面'%>
			<%= f.file_field :coverimage %>

			<%= f.label :category, '类别' %>
			<%= f.text_field :category %>

			<%= f.label :keywords, '关键字' %>
			<%= f.text_field :keywords %>

			<%= f.label :content, '内容' %>
			<%= f.kindeditor :content %>

			<%= f.submit "添加", class: "btn btn-large btn-primary" %>
		<% end%>
	</div>
</div>
