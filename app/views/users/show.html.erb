<div class="row">
	<div id="operator-title">
		<h4 id="user-admin-title">用户后台管理</h4>
		<% if !@company %>
			<div><%= link_to '创建公司', new_user_company_path(@user) %></div>
		<% end %>
		<div><%= link_to '添加工程', new_company_project_path(@company.id) %></div>
	</div>
	<div class="span2">
		<div class="tabbable tabs-left">
			<ul class="nav nav-list">
				<li><%= link_to '公司管理', '#' %></li>
				<li><%= link_to '工程管理', company_projects_path(@company) %></li>
			</ul>
		</div>
	</div>
	<div class="span6">
				<div>
					<div><span>公司Logo:</span><img with src = "<%= @company.logo %>" /></div>
					<div>
						<span>公司名称:</span>
						<%= link_to @company.name, user_company_path(@user,@company) %>
						<span><%= link_to '编辑', edit_user_company_path(@user,@company) %></span>
						<span><%= link_to '删除', @company, method: :delete, data: { confirm: "确定?"} %></span>
					</div>
					<div><span>公司法人:</span><%= @company.owner %></div>
					<div><span>联系方式:</span><%= @company.phone %>|<%= @company.email %>|<%= @company.telephone %>|<%= @company.qq %></div>
					<div><span>公司地址:</span><%= @company.province %>省<%= @company.city%>市<%= @company.district %>区<%= @company.address_other%></div>
					<div><span>公司简介:</span><%= @company.about%></div>
					<div>
						<span>公司工程</span>(<%= @company.projects.count %>)
						<ol class="projects">
								<% @company.projects.each do |project| %>
									<li>
										<span class="title">
											<%= project.name %>
										</span>
										<span class="operation">
											<%= link_to '编辑' , edit_company_project_path(@company,project) %>
											<%= link_to '删除' , [project.company, project], method: :delete, data: { confirm: "确定?"} %>
										</span>
									</li>

								<% end %>
							</ol>
					</div>
				</div>
	</div>
</div>

	
