<% provide(:title, 'Create project') %>
<h1>Create Project</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for ([@company, @company.projects.build]) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_field :content %>
    <%= f.submit "Create my project", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
