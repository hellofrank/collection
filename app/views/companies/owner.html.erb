<div class="row">
	<%= render "side" %>
	<div class="span6">
		<div>
			<% if @owner %>
				<div>
					<span>法人姓名:</span>
					<%= @owner.name %>
					<span><%= link_to '编辑', edit_company_contact_path(@company,@owner) %></span>
					<span><%= link_to '删除', [@owner.company, @owner], method: :delete, data: { confirm: "确定?"} %></span>
				</div>
				<div>
					<span>法人照片:</span>
					<%= (image_tag @owner.photo, :width => 200, :height => 150) %>
				</div>
				<div>
					<span>法人介绍:</span>
					<p><%= @owner.about %></p>
				</div>
				<div>
					<span>营业执照:</span>
					<%= image_tag @owner.license, :width => "200", :height => 150 %>
				</div>
			<% else %>
				<%= link_to '添加', new_company_owner_path(@company) %>
			<% end %>
		</div>
	</div>
</div>
