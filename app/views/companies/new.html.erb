<% provide(:title, '创建公司') %>
<h1>创建公司 </h1>
  <div class="span6 offset3">
    <%= form_for([current_user,current_user.companies.build],:html => {:multipart => true} ) do |f| %>

      <%= f.label :logo, 'Logo' %>
      <%= f.file_field :logo %>
      
      <%= f.label :name, '公司名称' %>
      <%= f.text_field :name %>
      
	  <%= f.label :category, '公司类别'%>
	  <%= f.text_field :category %>
	
      <%= f.label :about, '公司简介' %>
      <%= f.text_field :about %>

	  <%= f.label :service, '公司范围' %>
	  <%= f.text_field :service %>

      <%= f.submit "创建", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
