<% provide(:title, 'Create company') %>
<h1>Create company </h1>
  <div class="span6 offset3">
    <%= form_for([current_user,current_user.companies.build],:html => {:multipart => true} ) do |f| %>

      <%= f.label :logo %>
      <%= f.file_field :logo %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :owner %>
      <%= f.text_field :owner %>

      <%= f.label :about %>
      <%= f.text_field :about %>

      <%= f.label :contact %>
      <%= f.text_field :contact %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.submit "Create my company", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>