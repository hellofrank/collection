<% provide(:title, '更新地址') %>
<div class="row">
	<%= render "side" %>
	<div class="span6">
		<%= form_for([@company,@address]) do |f| %>
			
			<%= f.label :province, '省' %>
			<%= f.text_field :province %>

			<%= f.label :city, '市' %>
			<%= f.text_field :city %>

			<%= f.label :district, '区' %>
			<%= f.text_field :district %>

			<%= f.label :street, '街' %>
			<%= f.text_field :street %>

			<%= f.submit "更新", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>
