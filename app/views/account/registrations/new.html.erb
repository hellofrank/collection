<div class="col-md-6 col-md-offset-3">
	<legend>新用户注册</legend>
	<%= form_for(resource, :as => resource_name, :url => user_registration_path(resource_name), html:{class: "well form-horizontal"}) do |f| %>

		<div class='register-wrap-input'>
			<%= f.label :name, '用户名' %>
			<%= f.text_field :name, autofocus: true %>
		</div>
		<div class='register-wrap-input'>
			<%= f.label :email, '邮箱' %>
			<%= f.text_field :email, class: 'required email' %>
		</div>
		<div class='register-wrap-input'>
      <%= f.label :password, '密码' %>
			<%= f.password_field :password, class: 'required' %>
		</div>
		<div class='register-wrap-input'>
			<%= f.label :password_confirmation, '密码确认' %>
			<%= f.password_field :password_confirmation , class: 'required'%>
		</div>
		<div class="col-submit register-wrap-input">
			<%= f.submit "注册", class: "btn btn-primary btn-large" %>
		</div>
	<% end %>
	<div class="devise-shared">
		<%= render "account/shared/links" %>
	</div>
</div>  

