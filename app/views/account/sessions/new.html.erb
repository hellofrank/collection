<div class="col-md-6 col-md-offset-3">
	<legend>登录</legend>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

		<%= f.label :email, '邮箱' %>
		<%= f.text_field :email %>

		<%= f.label :password, '密码' %>
		<%= f.password_field :password %>

		<%= f.check_box :remember_me%>
		<%= f.label 'remember_me', '记住我' %>


		<div class="col-submit"><%= f.submit "登录", class: "btn btn-large btn-primary" %></div>
	<% end %>

	<div class="devise-shared"><%= render "devise/shared/links" %></div>
</div>

